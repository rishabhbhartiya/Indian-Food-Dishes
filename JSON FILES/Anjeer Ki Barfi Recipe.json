{
    "Recipe Title": "Anjeer Ki Barfi Recipe",
    "Recipe Info": {
        "Total Cook Time": "35 mins",
        "Prep Time": "10 mins",
        "Cook Time": "25 mins",
        "Recipe Servings": "5",
        "Easy": "N/A"
    },
    "Ingredients": [
        "1 Cup anjeer",
        "2 tbsp khus khus",
        "17-18   Cashewnuts",
        "For Making Barfi:",
        "1 tsp ghee",
        "1/2 cup condensed milk",
        "1/2 tsp cardamom powder"
    ],
    "Main Title": "How to Make Anjeer Ki Barfi",
    "Steps": {
        "Prepare Barfi:": [
            {
                "step_number": "1.",
                "step_text": "Melt ghee in a non-stick pan and add the anjeer paste to it."
            },
            {
                "step_number": "2.",
                "step_text": "Add condensed milk and cardamom powder. Mix well on low heat for better cooking."
            },
            {
                "step_number": "3.",
                "step_text": "Now add cashewnut powder and mix it properly with the mixture using spatula."
            },
            {
                "step_number": "4.",
                "step_text": "Mix it till it becomes a sticky paste."
            },
            {
                "step_number": "5.",
                "step_text": "Now spread it on a butter paper and level it evenly."
            },
            {
                "step_number": "6.",
                "step_text": "Sprinkle khus khus over it and roll it into the butter paper."
            },
            {
                "step_number": "7.",
                "step_text": "Refrigerate it for about 30 minutes."
            },
            {
                "step_number": "8.",
                "step_text": "After refrigeration, open up the paper wrap and slice it to make pieces of any shape."
            },
            {
                "step_number": "9.",
                "step_text": "Serve it at parties or store it for some daily dose of post-dinner desserts."
            }
        ]
    }
}