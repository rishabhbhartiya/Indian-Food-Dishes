{
    "Recipe Title": "Amritsari Chicken Masala Recipe",
    "Recipe Info": {
        "Total Cook Time": "55 mins",
        "Prep Time": "15 mins",
        "Cook Time": "40 mins",
        "Recipe Servings": "4",
        "Difficult": "N/A"
    },
    "Ingredients": [
        "For Marination:",
        "500 gms chicken",
        "2 tsp ginger garlic Paste",
        "3 tsp curd",
        "1 tsp lemon Juice",
        "1 tsp vinegar",
        "1 tsp coriander powder",
        "1 tsp cumin powder",
        "1 tsp red chilli powder",
        "1 tsp salt",
        "2 tsp onion, chopped",
        "For Gravy:",
        "2 tsp butter",
        "1 tsp red chilli powder",
        "1 tsp coriander powder",
        "1 tsp cumin powder, chopped",
        "1 tsp ginger",
        "1/2 cup water",
        "1 tsp salt",
        "1  Green chilli",
        "6  Tomatoes",
        "1/2  tsp sugar",
        "3 tsp butter",
        "3 tsp cream"
    ],
    "Main Title": "How to Make Amritsari Chicken Masala",
    "Steps": {
        "For marination:": [
            {
                "step_number": "1.",
                "step_text": "Take chicken in big bowl."
            },
            {
                "step_number": "2.",
                "step_text": "Add ginger-garlic paste, curd, lemon juice, vinegar, coriander powder, cumin powder, red chilli powder, salt and chopped onion to the chicken."
            },
            {
                "step_number": "3.",
                "step_text": "Mix all the ingredients thoroughly."
            },
            {
                "step_number": "4.",
                "step_text": "Keep aside for marination for 2 hours."
            }
        ],
        "For gravy:": [
            {
                "step_number": "1.",
                "step_text": "Take butter in a hot pan, add red chilli powder to it."
            },
            {
                "step_number": "2.",
                "step_text": "Saute them in a pan."
            },
            {
                "step_number": "3.",
                "step_text": "Add coriander powder, cumin powder and chopped ginger to it."
            },
            {
                "step_number": "4.",
                "step_text": "Saute them well."
            },
            {
                "step_number": "5.",
                "step_text": "Add water to the pan and mix well."
            },
            {
                "step_number": "6.",
                "step_text": "Add salt, green chilli, tomato and sugar. Mix well."
            },
            {
                "step_number": "7.",
                "step_text": "Take butter in another hot pan and spread it all along the sides of the pan."
            },
            {
                "step_number": "8.",
                "step_text": "Add the marinated chicken into the pan."
            },
            {
                "step_number": "9.",
                "step_text": "Saute the chicken with the butter."
            },
            {
                "step_number": "10.",
                "step_text": "Cover the pan to let the chicken cook."
            },
            {
                "step_number": "11.",
                "step_text": "Remove the lid and check if the chicken has turned golden brown and the butter has subsided."
            },
            {
                "step_number": "12.",
                "step_text": "Add the cooked tomato gravy to the chicken and mix well."
            },
            {
                "step_number": "13.",
                "step_text": "Cover the pan again and let it cook for a while."
            },
            {
                "step_number": "14.",
                "step_text": "Now remove the lid and add cream to the gravy."
            },
            {
                "step_number": "15.",
                "step_text": "Mix them well."
            },
            {
                "step_number": "16.",
                "step_text": "Serve hot, topped with butter, coriander leaves and green chillies."
            }
        ]
    }
}